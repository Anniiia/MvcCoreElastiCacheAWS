@model List<Coche>

<h1>Coches Favoritos AWS ElastiCache</h1>

@if (Model != null)
{
    <table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
               MARCA
            </th>
            <th>
               MODELO
            </th>
            <th>
                IMAGEN
            </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.IdCoche
                    </td>
                    <td>
                        @item.Marca
                    </td>
                    <td>
                        @item.Modelo
                    </td>
                    <td>
                        <img src="@item.Imagen" style="width:100px; height:150px;" />
                    </td>
                    <td>
                        <a asp-controller="Coches" asp-action="DeleteFavorito" asp-route-idcoche="@item.IdCoche" class="btn btn-danger">Borrar favorito</a>
                        @* @Html.ActionLink("Detalles", "Details", new { id = item.IdCoche }) | *@
                        @*           @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ }) *@
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
        
    <h2 style="color:red">No existen coches favoritos</h2>
}